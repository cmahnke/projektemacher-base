{
  "extends": ["stylelint-config-standard-scss", "stylelint-config-recommended-scss", "stylelint-prettier/recommended"],
  "plugins": [
    "stylelint-scss"
  ],
  "rules": {
    "no-empty-source": [null, {"severity": "warning"}],
    "media-feature-range-notation": [null, {"severity": "warning"}],
    "declaration-block-no-redundant-longhand-properties": [null, {"severity": "warning"}],
    "at-rule-no-unknown": null,
    "scss/at-rule-no-unknown": true,
    "scss/dollar-variable-empty-line-before": [null, {"severity": "warning"}],
    "block-no-empty": [null, {"severity": "warning"}],
    "comment-empty-line-before": [null, {"severity": "warning"}],
    "color-function-notation": "legacy",
    "alpha-value-notation": "number",
    "selector-class-pattern": [null, {"severity": "warning"}],
    "value-keyword-case": ["lower", {"ignoreProperties": ["font-family"]}],
    "scss/no-global-function-names": [null, {"severity": "warning"}],
    "function-no-unknown": [null, {"ignoreFunctions": ["lighten", "darken"]}],
    "comment-empty-line-before": [null, {"severity": "warning"}],
    "comment-whitespace-inside": [null, {"severity": "warning"}]
  }
}
