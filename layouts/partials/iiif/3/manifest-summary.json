{{/* TODO: Check if we need to escape - | jsonify */}}
         
{{- $summary := dict $.Site.Language.Lang (slice .Description) -}}
{{- if hugo.IsMultilingual -}}
  {{- $translations := where .Translations ".Lang" "!=" $.Site.Language.Lang -}}
  {{- range $translations -}}
    {{- $summary = $summary | merge (dict .Lang (slice .Description)) -}}
  {{- end -}}
{{- end -}}

"summary": {
    "{{ $.Site.Language.Lang }}": [
      {{ .Description | jsonify }}
    ]
  {{- if hugo.IsMultilingual -}}
    {{- $translations := where .Translations ".Lang" "!=" $.Site.Language.Lang -}}
    {{- range $translations -}}
    ,
      "{{ .Lang }}": [
        {{ .Description | jsonify }}
      ]
    {{ end }}
  {{- end -}}
}
