{
  {{- if .Aliases -}}
    "url": [ "{{- .Permalink -}}"
      {{- $base := .Site.BaseURL -}}
      {{- range .Aliases -}}
        {{- $suffix := . -}}
        {{- if hasPrefix $suffix "/" -}}
          {{- $suffix = substr $suffix 1 -}}
        {{- end -}}
        ,"{{- printf "%s%s" $base $suffix -}}"
      {{- end -}}
    ]
  {{- else -}}
    "url": "{{- .Permalink -}}"
  {{- end -}}
  {{- if (isset .Params "qr-color") -}}
    , "color": "{{ .Params.Get "qr-color" }}"
  {{- end -}}
  {{- if (isset .Params "qr-icon") -}}
    , "icon": "{{ .Params.Get "qr-icon" }}"
  {{- end -}}
  {{- if (isset .Params "qr-icon-color") -}}
    , "iconColor": "{{ .Params.Get "qr-icon-color" }}"
  {{- end -}}
}
